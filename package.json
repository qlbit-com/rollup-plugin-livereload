{
  "name": "rollup-plugin-livereload",
  "version": "2.0.5",
  "description": "Rollup plugin for LiveReload that watches the bundle and reloads the page on change",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "index.d.ts",
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto",
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint-check": "prettier --check *.mjs src/** test/**",
    "lint": "prettier --write *.mjs src/** test/**",
    "test": "rollup -c && rollup -c test.rollup.config.mjs -w",
    "prepare": "npm run build"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "livereload",
    "lr"
  ],
  "license": "MIT",
  "author": "Thomas Ghysels <info@thomasg.be>",
  "homepage": "https://github.com/thgh/rollup-plugin-livereload",
  "bugs": {
    "url": "https://github.com/thgh/rollup-plugin-livereload/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thgh/rollup-plugin-livereload"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "engines": {
    "node": ">=8.3"
  },
  "dependencies": {
    "livereload": "^0.9.3",
    "port-authority": "^1.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "prettier": "*",
    "rollup": "^3.26.3",
    "rollup-plugin-serve": "^2.0.2"
  }
}
